---
import StoryHero from "../components/StoryHero.astro";
import TopNav from "../components/TopNav.astro";
import Footer from "../components/Footer.astro";

const { title, lede, meta = [] } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/case-study.css" />
  </head>

  <body id="top">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <TopNav />
    
    <main id="main-content" class="story-content">
      <StoryHero title={title} lede={lede} meta={meta} />
      <article class="content">
        <slot />
      </article>
    </main>

    <Footer />
  </body>
</html>

<style>
  .story-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px;
    width: 100%;
  }

  .story-content .hero {
    max-width: 100%;
    padding-bottom: clamp(18px, 3vw, 36px);
    border-bottom: 1px solid var(--hairline);
    margin-bottom: clamp(22px, 3vw, 34px);
  }

  .story-content .content {
    padding-top: clamp(22px, 3vw, 34px);
  }

  .story-content .content section {
    padding-top: clamp(28px, 4vw, 56px);
    max-width: 100%;
    scroll-margin-top: 20px;
  }

  @media (min-width: 768px) {
    .story-content {
      padding: 60px 40px;
    }
  }

  @media (min-width: 1024px) {
    .story-content {
      padding: 80px var(--page-pad-right);
    }
  }
</style>

