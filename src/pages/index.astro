---
import TopNav from "../components/TopNav.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="alternate icon" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="robots" content="noindex, nofollow" />
		<meta name="generator" content={Astro.generator} />
		<title>Billy Carlson - Product Design Director</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
		<link rel="stylesheet" href="/styles/case-study.css" />
	</head>
	<body>
		<TopNav />
		
		<main class="home-page">
			<!-- Hero Section -->
			<section class="home-hero">
				<h1 class="home-headline">Hi, I'm Billy</h1>
				<p class="home-subheadline">
					I'm a UX Design Manager at iHerb. My mission is to bridge the gap between user needs and business goals—creating products that people genuinely like to use and fuel sustainable growth.
				</p>
				<p class="home-description">
					Say hi!
				</p>
			</section>

			<!-- About Section -->
			<section class="home-section">
				<div class="section-header">
					<span class="section-label">About Me</span>
					<h2 class="section-title">Design Leadership & Strategy</h2>
				</div>
				<div class="home-content">
					<p class="home-text">
						I bring a focus to communication, systems thinking, and creative strategy across end-to-end product design. I also coach designers through structured feedback and practical skill development.
					</p>
					<a href="/about" class="home-link">Learn More</a>
				</div>
			</section>

			<!-- Quote Section -->
			<section class="home-section">
				<div class="home-content">
					<p class="home-quote">"What is the best outcome we can create?"</p>
				</div>
			</section>

			<!-- Case Studies Section -->
			<section class="home-section">
				<div class="section-header">
					<span class="section-label">Work</span>
					<h2 class="section-title">Case Studies</h2>
				</div>
				<div class="work-grid">
					<a href="/case-studies/iherb-desktop-redesign" class="work-item">
						<span class="work-label">Case Study</span>
						<h3 class="work-title">iHerb Desktop Homepage Redesign</h3>
						<p class="work-description">Reframing a high-pressure, executive-driven request into a future-facing design vision</p>
					</a>
					<a href="/case-studies/momentum-report" class="work-item">
						<span class="work-label">Case Study</span>
						<h3 class="work-title">Momentum Report</h3>
						<p class="work-description">Transforming a manual reporting practice into a digital-first insights product</p>
					</a>
					<a href="/work" class="work-item">
						<span class="work-label">View All</span>
						<h3 class="work-title">See All Case Studies</h3>
						<p class="work-description">Explore more of my work and projects</p>
					</a>
				</div>
			</section>

			<!-- Links Section -->
			<section class="home-section">
				<div class="section-header">
					<span class="section-label">Connect</span>
					<h2 class="section-title">Get In Touch</h2>
				</div>
				<div class="links-grid">
					<a href="https://linkedin.com/in/billycarlson" target="_blank" class="link-item">
						<span class="link-label">LinkedIn</span>
					</a>
					<div class="link-item">
						<span class="link-label">Speaking & Community</span>
					</div>
				</div>
			</section>

			<!-- Testimonials Section -->
			<section class="home-section">
				<div class="section-header">
					<span class="section-label">Testimonials</span>
					<h2 class="section-title">Kind Words from Collaborators</h2>
				</div>
				<div class="home-content">
					<p class="home-text" style="font-style: italic;">
						"Structured, transparent, and organized" • "High accountability and drive" • "Customer-centric approach" • "Practical and grounded in feasibility"
					</p>
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>

<style>
  .home-page {
    max-width: 1100px;
    margin: 0 auto;
    padding: 60px 80px 80px;
    width: 100%;
  }

  /* Hero */
  .home-hero {
    margin-bottom: 80px;
    max-width: 800px;
  }

  .home-headline {
    font-size: 48px;
    font-weight: 500;
    color: var(--text);
    margin: 0 0 30px;
    font-family: 'Instrument Serif', serif;
  }

  .home-subheadline {
    font-size: 36px;
    line-height: 1.3;
    color: var(--text);
    font-weight: 400;
    font-family: 'Instrument Serif', serif;
    margin: 0 0 24px;
  }

  .home-description {
    font-size: var(--step-0);
    line-height: 1.7;
    color: var(--muted);
    margin: 0;
    max-width: 650px;
  }

  /* Sections */
  .home-section {
    margin-bottom: 80px;
    padding-top: 40px;
    border-top: 1px solid var(--hairline);
  }

  .section-header {
    margin-bottom: 40px;
  }

  .section-label {
    display: block;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.78rem;
    color: var(--muted);
    margin-bottom: 8px;
    font-weight: 500;
    font-family: 'Inter', sans-serif;
  }

  .section-title {
    font-size: 36px;
    font-weight: 500;
    color: var(--text);
    margin: 0;
    font-family: 'Instrument Serif', serif;
  }

  .home-content {
    max-width: 800px;
  }

  .home-text {
    font-size: var(--step-0);
    line-height: 1.7;
    color: var(--muted);
    margin: 0 0 24px;
  }

  .home-quote {
    font-size: var(--step-1);
    line-height: 1.6;
    color: var(--text);
    font-style: italic;
    margin: 0;
    max-width: 800px;
  }

  .home-link {
    font-size: var(--step-0);
    color: var(--text);
    text-decoration: none;
    font-family: 'Inter', sans-serif;
    transition: color 0.2s;
    display: inline-block;
    margin-top: 8px;
  }

  .home-link:hover {
    color: var(--muted);
  }

  /* Work Grid */
  .work-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .work-item {
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s;
    display: flex;
    flex-direction: column;
  }

  .work-item:hover {
    opacity: 0.7;
  }

  .work-label {
    display: block;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.7rem;
    color: var(--muted);
    margin-bottom: 8px;
    font-weight: 500;
    font-family: 'Inter', sans-serif;
  }

  .work-title {
    font-size: var(--step-1);
    font-weight: 500;
    color: var(--text);
    margin: 0 0 12px;
    font-family: 'Instrument Serif', serif;
  }

  .work-description {
    font-size: var(--step-0);
    line-height: 1.6;
    color: var(--muted);
    margin: 0;
  }

  /* Links Grid */
  .links-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    max-width: 600px;
  }

  .link-item {
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s;
  }

  .link-item:hover {
    opacity: 0.7;
  }

  .link-label {
    font-size: var(--step-0);
    line-height: 1.6;
    color: var(--text);
  }

  /* Responsive */
  @media (max-width: 767px) {
    .home-page {
      padding: 40px 20px 60px;
    }

    .home-hero {
      margin-bottom: 60px;
    }

    .home-subheadline {
      font-size: 1.4rem;
    }

    .home-section {
      margin-bottom: 60px;
      padding-top: 30px;
    }

    .work-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .links-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .home-page {
      padding: 50px 40px 70px;
    }

    .work-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }
</style>
