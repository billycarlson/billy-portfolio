<style>
  .site-footer {
    border-top: 1px solid var(--hairline);
    padding: 40px 80px;
    margin-top: 80px;
  }

  .footer-content {
    max-width: 1320px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-copyright {
    font-size: var(--step-0);
    color: var(--muted);
    margin: 0;
    font-style: italic;
    font-family: 'Inter', sans-serif;
  }

  .footer-social {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .footer-social a {
    color: var(--text);
    display: flex;
    align-items: center;
    transition: opacity 0.2s;
  }

  .footer-social a:hover {
    opacity: 0.6;
  }

  .footer-divider {
    color: var(--muted);
    font-size: 14px;
    user-select: none;
  }

  @media (max-width: 767px) {
    .site-footer {
      padding: 30px 16px;
      margin-top: 60px;
    }

    .footer-content {
      flex-direction: column;
      gap: 24px;
      text-align: center;
    }

    .footer-social {
      gap: 12px;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .site-footer {
      padding: 40px 40px;
    }
  }
</style>

