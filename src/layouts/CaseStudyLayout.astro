---
import TableOfContents from "../components/TableOfContents.astro";
import CaseStudyHero from "../components/CaseStudyHero.astro";
import TopNav from "../components/TopNav.astro";
import Footer from "../components/Footer.astro";

const { title, lede, meta = [], sections = [] } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/case-study.css" />
  </head>

  <body id="top">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <TopNav />
    
    <div class="caseStudy">
      <aside class="tocWrap">
        <TableOfContents sections={sections} />
      </aside>

      <main id="main-content" class="main">
        <CaseStudyHero title={title} lede={lede} meta={meta} />
        <article class="content">
          <slot />
        </article>
      </main>
    </div>

    <Footer />
  </body>
</html>

