---
import TableOfContents from "../components/TableOfContents.astro";
import CaseStudyHero from "../components/CaseStudyHero.astro";
import LeftNav from "../components/LeftNav.astro";

const { title, lede, meta = [], sections = [] } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/case-study.css" />
  </head>

  <body>
    <div class="pageWrapper">
      <LeftNav />
      
      <div class="caseStudy">
        <aside class="tocWrap">
          <TableOfContents sections={sections} />
        </aside>

        <main class="main">
          <CaseStudyHero title={title} lede={lede} meta={meta} />
          <article class="content">
            <slot />
          </article>
        </main>
      </div>
    </div>
  </body>
</html>

