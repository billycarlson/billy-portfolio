---
import TableOfContents from "../components/TableOfContents.astro";
import CaseStudyHero from "../components/CaseStudyHero.astro";
import TopNav from "../components/TopNav.astro";

const { title, lede, meta = [], sections = [] } = Astro.props;
// #region agent log
fetch('http://127.0.0.1:7242/ingest/a78ef623-cca5-4a84-aff8-2f9c4fa8b94d',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'CaseStudyLayout.astro:props',message:'layout props received',data:{title:title,sectionsCount:sections.length,sections:JSON.parse(JSON.stringify(sections)),hasNested:sections.some(s=>s.children&&s.children.length>0)},timestamp:Date.now(),sessionId:'debug-session',runId:'run2',hypothesisId:'F'})}).catch(()=>{});
// #endregion
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/case-study.css" />
  </head>

  <body>
    <TopNav />
    
    <div class="caseStudy">
      <aside class="tocWrap">
        <TableOfContents sections={sections} />
      </aside>

      <main class="main">
        <CaseStudyHero title={title} lede={lede} meta={meta} />
        <article class="content">
          <slot />
        </article>
      </main>
    </div>
  </body>
</html>

