---
// Simple password protection component
// Set password via environment variable or default
const password = import.meta.env.PUBLIC_SITE_PASSWORD || 'portfolio2024';
---

<div id="password-gate" class="password-gate">
  <div class="password-gate-content">
    <h1 class="password-gate-title">Limited Access</h1>
    <p class="password-gate-description">Reach out if you want the password.</p>
    <form id="password-form" class="password-form">
      <input 
        type="password" 
        id="password-input" 
        class="password-input" 
        placeholder="Enter password"
        autocomplete="off"
        required
      />
      <button type="submit" class="password-submit">Enter</button>
    </form>
    <p id="password-error" class="password-error" style="display: none;">
      Incorrect password. Please try again.
    </p>
  </div>
</div>

<script>
  // CHANGE THIS PASSWORD to whatever you want
  // To change it, edit the PASSWORD constant below
  const PASSWORD = 'portfolio2024';
  const STORAGE_KEY = 'portfolio_access_granted';
  
  // Check if access is already granted
  function hasAccess() {
    if (typeof window === 'undefined') return false;
    const granted = sessionStorage.getItem(STORAGE_KEY);
    return granted === 'true';
  }
  
  // Grant access
  function grantAccess() {
    if (typeof window !== 'undefined') {
      sessionStorage.setItem(STORAGE_KEY, 'true');
    }
  }
  
  // Hide password gate
  function hideGate() {
    const gate = document.getElementById('password-gate');
    if (gate) {
      gate.style.display = 'none';
    }
  }
  
  // Show password gate
  function showGate() {
    const gate = document.getElementById('password-gate');
    if (gate) {
      gate.style.display = 'flex';
    }
  }
  
  // Check access on page load
  if (typeof window !== 'undefined') {
    if (hasAccess()) {
      hideGate();
    } else {
      showGate();
      
      // Handle form submission
      const form = document.getElementById('password-form');
      const input = document.getElementById('password-input');
      const error = document.getElementById('password-error');
      
      if (form && input) {
        form.addEventListener('submit', (e) => {
          e.preventDefault();
          
          if (input.value === PASSWORD) {
            grantAccess();
            hideGate();
            error.style.display = 'none';
            input.value = '';
          } else {
            error.style.display = 'block';
            input.value = '';
            input.focus();
          }
        });
        
        // Focus input on load
        input.focus();
      }
    }
  }
</script>

<style>
  .password-gate {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--bg);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10000;
    padding: 20px;
  }

  .password-gate-content {
    max-width: 400px;
    width: 100%;
    text-align: center;
  }

  .password-gate-title {
    font-size: 32px;
    font-weight: 500;
    color: var(--text);
    margin: 0 0 16px;
    font-family: 'Instrument Serif', serif;
  }

  .password-gate-description {
    font-size: var(--step-0);
    color: var(--muted);
    margin: 0 0 32px;
    font-family: 'Inter', sans-serif;
  }

  .password-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .password-input {
    width: 100%;
    padding: 16px;
    font-size: var(--step-0);
    font-family: 'Inter', sans-serif;
    background: var(--bg);
    border: 1px solid var(--hairline);
    color: var(--text);
    border-radius: 4px;
    outline: none;
    transition: border-color 0.2s;
  }

  .password-input:focus {
    border-color: var(--red);
  }

  .password-submit {
    padding: 16px;
    font-size: var(--step-0);
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    background: var(--red);
    color: var(--white);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s, transform 0.1s;
  }

  .password-submit:hover {
    background: var(--red-light);
    transform: translateY(-1px);
  }

  .password-submit:active {
    transform: translateY(0);
  }

  .password-error {
    margin-top: 16px;
    font-size: var(--step--1);
    color: var(--red);
    font-family: 'Inter', sans-serif;
  }
</style>

