---
const currentPath = Astro.url.pathname;
const isActive = (path: string) => {
  if (path === '/') {
    return currentPath === '/' || currentPath.startsWith('/stories/');
  }
  return currentPath.startsWith(path);
};
---

<nav class="topNav">
  <div class="topNav-left">
    <a href="/" class="topNav-name">BILLY CARLSON</a>
    <a href="/" class={isActive('/') ? 'active' : ''}>Stories</a>
    <a href="/about" class={isActive('/about') ? 'active' : ''}>About</a>
    <a href="/resume" class={isActive('/resume') ? 'active' : ''}>Resume</a>
  </div>
  <div class="topNav-right">
    <a href="https://linkedin.com/in/billycarlson" target="_blank" rel="noopener noreferrer" class="topNav-social">LinkedIn</a>
  </div>
</nav>

